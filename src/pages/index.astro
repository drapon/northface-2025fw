---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../app.css';
---

<BaseLayout title="THE NORTH FACE Maternity+ 2025FW">
  <main>
    <div class="min-h-screen bg-beige">
      <h1 class="text-4xl font-bold text-center py-16 text-navy font-display">
        TNF Maternity+ 2025FW
      </h1>
      <p class="text-center text-lg text-black font-sans">
        開発準備が整いました。
      </p>
      <div class="text-center mt-8 space-y-4">
        <p class="text-sm text-muted">Tailwind CSS v4.1.12</p>
        <div class="flex justify-center gap-4">
          <div class="w-20 h-20 bg-navy rounded shadow-card"></div>
          <div class="w-20 h-20 bg-beige rounded shadow-card border border-gray-300"></div>
          <div class="w-20 h-20 bg-paper rounded shadow-card"></div>
          <div class="w-20 h-20 bg-terra rounded shadow-card"></div>
          <div class="w-20 h-20 bg-tnf-blue rounded shadow-card"></div>
        </div>
        <div class="mt-8">
          <span class="label-tape">テープ風ラベルのテスト</span>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>