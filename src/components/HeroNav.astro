---
export interface Props {
  items?: Array<{
    label: string;
    href: string;
  }>;
  class?: string;
}

const { items = [], class: className = '' } = Astro.props;
---

<nav class={`flex gap-4 text-sm ${className}`} aria-label="Hero navigation">
  {
    items.map((item) => (
      <a
        href={item.href}
        class="focus:ring-offset-navy rounded px-2 py-1 text-white/80 transition-colors duration-200 hover:text-white focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:outline-none"
      >
        {item.label}
      </a>
    ))
  }
</nav>
